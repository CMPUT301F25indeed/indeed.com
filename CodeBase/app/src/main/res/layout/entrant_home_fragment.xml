<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entrant_HomeFragment">

    <!-- Entrant greeting -->
    <TextView
        android:id="@+id/entrant_greeting_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Entrant!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Browse Events button -->
    <Button
        android:id="@+id/btn_browse_events"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Browse Events"
        app:layout_constraintTop_toBottomOf="@id/entrant_greeting_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp" />

    <!-- View History button -->
    <Button
        android:id="@+id/btn_view_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My Event History"
        app:layout_constraintTop_toBottomOf="@id/btn_browse_events"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Notifications button -->
    <Button
        android:id="@+id/btn_notifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Notifications"
        app:layout_constraintTop_toBottomOf="@id/btn_view_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
