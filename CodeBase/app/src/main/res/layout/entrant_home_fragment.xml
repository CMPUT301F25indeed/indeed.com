<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <!-- Greeting -->
    <TextView
        android:id="@+id/entrant_greeting_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Hi Entrant"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/ibmplexserif_semibold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/entrant_tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Your events, your journey."
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:fontFamily="@font/opensans"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/entrant_greeting_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider -->
    <View
        android:id="@+id/entrant_divider"
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/entrant_tagline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/entrant_subtitle_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Where do you want to go today?"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:fontFamily="@font/opensans"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/entrant_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Options list -->
    <ListView
        android:id="@+id/entrant_home_buttons"
        android:layout_width="0dp"
        android:layout_height="468dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="22dp"
        android:listSelector="@android:color/transparent"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/entrant_subtitle_home"
        app:layout_constraintBottom_toTopOf="@id/entrant_logout_button_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/entrant_logout_button_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/opensans"

        android:background="@drawable/bg_button_danger_border"
        android:backgroundTint="@null"
        android:foregroundTint="@null"

        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
