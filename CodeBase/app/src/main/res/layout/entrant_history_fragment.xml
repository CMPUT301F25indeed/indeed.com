<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_history_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Title -->
    <TextView
        android:id="@+id/history_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Activity History"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:fontFamily="@font/ibmplexserif_semibold"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle / Quote -->
    <TextView
        android:id="@+id/history_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="See your past event activity."
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:fontFamily="@font/opensans"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/history_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider under subtitle -->
    <View
        android:id="@+id/history_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/history_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ListView (same as before, just below divider) -->
    <ListView
        android:id="@+id/entrant_activity_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        app:layout_constraintTop_toBottomOf="@id/history_divider"
        app:layout_constraintBottom_toTopOf="@id/entrant_home_button_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Home button (primary style, centered) -->
    <Button
        android:id="@+id/entrant_home_button_history"
        android:layout_width="279dp"
        android:layout_height="38dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_primary"
        android:backgroundTint="@null"
        android:fontFamily="@font/opensans"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
