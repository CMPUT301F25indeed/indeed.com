<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/bg_button_secondary"
    android:layout_marginBottom="12dp">

    <!-- Top row: timestamp (left) + senderEmail (right) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/noti_timestamp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textSize="12sp"
            android:textColor="#7AA9FF" />

        <TextView
            android:id="@+id/noti_sender_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sender@example.com"
            android:textSize="12sp"
            android:textColor="#7AA9FF" />
    </LinearLayout>

    <!-- Message (big text) -->
    <TextView
        android:id="@+id/noti_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the notification message."
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingBottom="6dp" />

    <!-- Event Name (subtle text) -->
    <TextView
        android:id="@+id/noti_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name Here"
        android:textSize="14sp"
        android:textColor="#CCCCCC" />

</LinearLayout>
