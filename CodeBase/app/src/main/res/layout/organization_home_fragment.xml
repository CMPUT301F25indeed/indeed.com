<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Organizer_HomeMessageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, Organizer!"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/Organizer_HomeSubMessageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="What would you like to do today?"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/Organizer_HomeMessageText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/Organizer_HomeButtons"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Organizer_HomeSubMessageText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/Organizer_HomeBrowseEventsButton"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:text="Browse Events"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/Organizer_HomeUpcomingEventsButton"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:text="My Upcoming Events"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/Organizer_HomeHistoryButton"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:text="History / Notifications"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/Organizer_HomeProfileButton"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:text="My Profile"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/Organizer_HomeLogoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
