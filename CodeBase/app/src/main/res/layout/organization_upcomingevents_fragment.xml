<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15sp"
    android:layout_marginBottom="15sp">

    <TextView
        android:id="@+id/Organizer_UpcomingBanner"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="My Upcoming Events"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/Organizer_UpcomingEventList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/Organizer_Upcoming_HomeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Organizer_Upcoming_EventDraftButton" />

    <Button
        android:id="@+id/Organizer_Upcoming_NewEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+New Event"
        app:layout_constraintStart_toEndOf="@id/Organizer_UpcomingBanner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/Organizer_Upcoming_EventDraftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Drafts"
        app:layout_constraintStart_toEndOf="@id/Organizer_UpcomingBanner"
        app:layout_constraintTop_toBottomOf="@id/Organizer_Upcoming_NewEventButton"
        app:layout_constraintEnd_toEndOf="parent" />



