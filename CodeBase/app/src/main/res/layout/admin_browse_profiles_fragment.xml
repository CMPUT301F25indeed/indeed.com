<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Spacer to prevent sticking to status bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- TITLE BAR (no back button inside now) -->
    <TextView
        android:id="@+id/admin_browse_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Profiles"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginBottom="4dp"/>

    <!-- QUOTE UNDER TITLE -->
    <TextView
        android:id="@+id/admin_browse_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Every profile tells a story."
        android:textSize="14sp"
        android:textColor="#BBBBBB"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- DIVIDER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="14dp" />

    <!-- SEARCH & FILTER ROW -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <SearchView
            android:id="@+id/admin_profiles_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:iconifiedByDefault="false"
            android:queryHint="Search name/email" />

        <Spinner
            android:id="@+id/admin_profiles_filter"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />
    </LinearLayout>

    <!-- RECYCLER (scrollable area) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_profiles_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="20dp"
        android:padding="12dp" />

    <!-- FIXED BOTTOM BUTTON -->
    <Button
        android:id="@+id/admin_browse_back"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_primary"
        android:text="Back to Dashboard"
        android:textColor="#FFFFFF"
        android:textAllCaps="false" />

</LinearLayout>
