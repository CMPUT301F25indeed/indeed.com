<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:paddingTop="32dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <!-- Top: Back button + Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/admin_browse_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:text="â†"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_danger_border" />

        <TextView
            android:id="@+id/admin_browse_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse Profiles"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/opensans"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/admin_profiles_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search, filter, or review user profiles."
        android:textColor="#BBBBBB"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/opensans"
        android:gravity="center" />

    <!-- Search bar -->
    <SearchView
        android:id="@+id/admin_profiles_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#111111"
        android:queryHint="Search name or email"
        android:layout_marginBottom="12dp" />

    <!-- Filter Spinner (Styled) -->
    <Spinner
        android:id="@+id/admin_profiles_filter"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#111111"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:spinnerMode="dropdown" />

    <!-- RecyclerView of profile cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_profiles_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

</LinearLayout>
