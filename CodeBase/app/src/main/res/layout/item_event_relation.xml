<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_button_secondary"
    android:layout_marginBottom="10dp">

    <!-- Medium text → relation -->
    <TextView
        android:id="@+id/relation_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joined"
        android:textSize="18sp"
        android:textColor="#7AA9FF"
        android:paddingBottom="6dp"/>

    <!-- Large text → event name -->
    <TextView
        android:id="@+id/relation_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Event Name"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingBottom="4dp"/>

    <!-- Small text → event ID -->
    <TextView
        android:id="@+id/relation_event_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e12f8701fe48558a0c364a9569d04912d0666aa53098b9123955a2a2710710be"
        android:textSize="7sp"
        android:textColor="#CCCCCC" />

</LinearLayout>
