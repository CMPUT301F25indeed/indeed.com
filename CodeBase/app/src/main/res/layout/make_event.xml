<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/NewEventPopup_NameDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <DatePicker
        android:id="@+id/NewEventPopup_StartDateDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="-30sp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:scaleX="0.75"
        android:scaleY="0.75"
        app:layout_constraintEnd_toStartOf="@id/NewEventPopup_StartTimeDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NewEventPopup_NameDialog" />

    <TimePicker
        android:id="@+id/NewEventPopup_StartTimeDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-30sp"
        android:layout_marginEnd="30sp"

        android:scaleX="0.75"
        android:scaleY="0.75"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/NewEventPopup_StartDateDialog"
        app:layout_constraintTop_toBottomOf="@id/NewEventPopup_NameDialog" />

    <DatePicker
        android:id="@+id/NewEventPopup_EndDateDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="-30sp"
        android:scaleX="0.75"
        android:scaleY="0.75"
        app:layout_constraintTop_toBottomOf="@id/NewEventPopup_StartTimeDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/NewEventPopup_EndTimeDialog" />

    <TimePicker
        android:id="@+id/NewEventPopup_EndTimeDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-30sp"
        android:layout_marginEnd="30sp"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/NewEventPopup_EndDateDialog"
        app:layout_constraintTop_toBottomOf="@id/NewEventPopup_StartTimeDialog" />


    <EditText
        android:id="@+id/NewEventPopup_MaxEntrantsDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="(optional) maximum number of applicants:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NewEventPopup_EndDateDialog"/>

</androidx.constraintlayout.widget.ConstraintLayout>