<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/NewEventPopup_NameDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Title"
            />

        <EditText
            android:id="@+id/NewEventPopup_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:minLines="2"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/NewEventPopup_Criteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Criteria for Sign-up"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/NewEventPopup_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/NewEventPopup_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Start"
            android:layout_marginBottom="-20sp"/>

        <include
            android:id="@+id/RegistrationOpen"
            layout="@layout/datetime_picker" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration End"
            android:layout_marginBottom="-20sp"/>

        <include
            android:id="@+id/RegistrationClose"
            layout="@layout/datetime_picker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Start"
            android:layout_marginBottom="-20sp"/>

        <include
            android:id="@+id/EventOpen"
            layout="@layout/datetime_picker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event End"
            android:layout_marginBottom="-20sp"/>

        <include
            android:id="@+id/EventClose"
            layout="@layout/datetime_picker" />

        <EditText
            android:id="@+id/NewEventPopup_MaxEntrantsDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capacity (optional)"
            android:inputType="number"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>
