<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/Organizer_EventPopup_View_Event_Poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Event Poster"
            android:contentDescription="Event Poster"/>

        <!-- to display qr code!-->
        <ImageView
            android:id="@+id/Organizer_EventPopup_QR_Code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="Event QR Code"/>

        <!-- Formatting Description label and text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Description: "
                    android:textStyle="italic">
                </TextView>

                <TextView
                    android:id="@+id/Organizer_EventPopup_Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/Organizer_EventPopup_Criteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Organizer_EventPopup_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Organizer_EventPopup_EventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/Organizer_EventPopup_RegistrationPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Organizer_EventPopup_EventRuntime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Organizer_EventPopup_Capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Button grid at bottom of screen -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:columnCount="2">
                <Button
                    android:id="@+id/Organizer_EventPopup_WaitList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="View Waiting List">
                </Button>

                <Button
                    android:id="@+id/Organizer_EventPopup_InvList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="View Invited List">
                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="View Cancelled List"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="View Accepted List"/>

                <!-- New: Update poster button inside grid -->
                <Button
                    android:id="@+id/btnUpdatePoster"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Update Event Poster"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnViewPoster"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="View Event Poster"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnSendNotifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Send Notifications"
                    android:textColor="@android:color/white" />

        </GridLayout>


        <!--        &lt;!&ndash; NEW: Button to update event poster &ndash;&gt;-->
<!--        <Button-->
<!--            android:id="@+id/Organizer_EventPopup_UpdatePosterButton"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Update Event Poster"-->
<!--            android:textAllCaps="false"-->
<!--            android:layout_marginTop="12dp"-->
<!--            android:padding="10dp" />-->

    </LinearLayout>
</ScrollView>