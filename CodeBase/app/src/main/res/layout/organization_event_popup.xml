<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_admin_image_card"
        android:padding="20dp">

        <!-- QR CODE (CENTERED) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event QR Code"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"/>

        <ImageView
            android:id="@+id/Organizer_EventPopup_QR_Code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_event_image_rounded"
            android:padding="12dp"
            android:contentDescription="Event QR Code"
            android:layout_marginBottom="20dp" />

        <!-- SECTION: EVENT INFO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/Organizer_EventPopup_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DDDDDD"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/Organizer_EventPopup_Criteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DDDDDD"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/Organizer_EventPopup_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DDDDDD"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/Organizer_EventPopup_EventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DDDDDD"
            android:layout_marginBottom="12dp" />

        <!-- SECTION: DATES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Timeline"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/Organizer_EventPopup_RegistrationPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#BBBBBB"
            android:layout_marginBottom="3dp" />

        <TextView
            android:id="@+id/Organizer_EventPopup_EventRuntime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#BBBBBB"
            android:layout_marginBottom="3dp" />

        <TextView
            android:id="@+id/Organizer_EventPopup_Capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#BBBBBB"
            android:layout_marginBottom="15dp" />

        <!-- GRID BUTTONS (INCLUDING VIEW POSTER AT BOTTOM) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowOrderPreserved="false">

            <Button
                android:id="@+id/Organizer_EventPopup_WaitList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_button_primary"
                android:text="Waiting List"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/Organizer_EventPopup_InvList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_button_primary"
                android:text="Invited List"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_button_primary"
                android:text="Cancelled List"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_button_primary"
                android:text="Accepted List"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnUpdatePoster"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_button_primary"
                android:text="Update Poster"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnViewPoster"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_button_primary"
                android:text="View Event Poster"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnSendNotifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_button_primary"
                android:text="Send Notifications"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </GridLayout>

    </LinearLayout>

</ScrollView>
