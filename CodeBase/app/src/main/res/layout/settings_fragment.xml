<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <!-- TOP BAR -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="32dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <!-- BACK BUTTON -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_primary"
            android:backgroundTint="@null"
            android:fontFamily="@font/opensans"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- TITLE CENTER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/ibmplexserif_semibold"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </RelativeLayout>

    <!-- NEW HEADER TEXT -->
    <TextView
        android:id="@+id/role_text_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/opensans"
        android:text="Change your destiny"
        android:textColor="#BBBBBB"
        android:textSize="16sp" />

    <!-- DIVIDER UNDER HEADER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp" />

    <!-- MAIN CONTENT SCROLLING -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- PROFILE IMAGE + EDIT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/pfp_image"
                    android:layout_width="199dp"
                    android:layout_height="191dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <Button
                    android:id="@+id/pfp_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_button_secondary"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/opensans"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- NAME -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensans"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/settings_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext_dark"
                android:fontFamily="@font/opensans"
                android:hint="Enter your name"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:textSize="16sp" />

            <!-- EMAIL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/settings_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext_dark"
                android:fontFamily="@font/opensans"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:textSize="16sp" />

            <!-- PHONE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans"
                android:text="Phone"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/settings_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext_dark"
                android:fontFamily="@font/opensans"
                android:hint="Enter phone number"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:textSize="16sp" />

            <!-- LIGHT MODE SWITCH (hidden at startup) -->
            <LinearLayout
                android:id="@+id/light_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <!-- When using weight in a horizontal layout, width must be 0dp -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Light Mode"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans" />

                <Switch
                    android:id="@+id/settings_lightmode_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- NOTIFICATIONS SWITCH (hidden at startup) -->
            <LinearLayout
                android:id="@+id/noti_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notifications"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans" />

                <Switch
                    android:id="@+id/settings_notif_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- DELETE BUTTON MOVED INSIDE SCROLL (hidden at startup) -->
            <Button
                android:id="@+id/delete_profile_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_button_danger_border"
                android:backgroundTint="@null"
                android:text="Delete Profile"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="@font/opensans"
                android:visibility="gone" />

            <!-- bottom spacer so save button isn't glued to content -->
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- STATIC SAVE BUTTON AT BOTTOM -->
    <Button
        android:id="@+id/save_settings_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_button_primary"
        android:text="Save Changes"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/opensans" />

</LinearLayout>
