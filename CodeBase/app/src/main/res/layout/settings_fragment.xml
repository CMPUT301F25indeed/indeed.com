<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- TOP BAR -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="32dp">


    <!-- BLUE BORDER BACK BUTTON -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_primary"
            android:backgroundTint="@null"
            android:fontFamily="@font/opensans"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- TITLE CENTERED -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="26sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/ibmplexserif_semibold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- ROLE TEXT -->
    <TextView
        android:id="@+id/role_text_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: User"
        android:textColor="#BBBBBB"
        android:textSize="16sp"
        android:fontFamily="@font/opensans"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"/>

    <!-- MAIN CONTENT SCROLLABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- PHOTO ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/opensans"/>

                <ImageView
                    android:id="@+id/pfp_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="#222222"
                    android:scaleType="centerCrop"/>

                <!-- Small Primary Edit Button -->
                <Button
                    android:id="@+id/pfp_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensans"
                    android:background="@drawable/bg_button_secondary"
                    android:backgroundTint="@null"/>
            </LinearLayout>

            <!-- NAME -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/opensans"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/settings_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Enter your name"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:fontFamily="@font/opensans"
                android:background="@drawable/bg_edittext_dark"
                android:padding="12dp"
                android:textSize="16sp"/>

            <!-- EMAIL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/opensans"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/settings_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:fontFamily="@font/opensans"
                android:background="@drawable/bg_edittext_dark"
                android:padding="12dp"
                android:textSize="16sp"/>

            <!-- PHONE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/opensans"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/settings_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Enter phone number"
                android:inputType="phone"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:fontFamily="@font/opensans"
                android:background="@drawable/bg_edittext_dark"
                android:padding="12dp"
                android:textSize="16sp"/>

            <!-- SWITCHES -->
            <LinearLayout
                android:id="@+id/light_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Light Mode"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans"/>

                <Switch
                    android:id="@+id/settings_lightmode_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/noti_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans"
                    android:text="Notifications"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/settings_notif_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- STATIC BOTTOM BUTTONS (NOT SCROLLING) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- SAVE (Primary Blue) -->
        <Button
            android:id="@+id/save_settings_button"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Save Changes"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/opensans"
            android:background="@drawable/bg_button_primary"
            android:backgroundTint="@null"/>

        <!-- DELETE (Red Border) -->
        <Button
            android:id="@+id/delete_profile_button"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Delete Profile"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/opensans"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_danger_border"
            android:backgroundTint="@null"
            app:backgroundTint="@null" />

    </LinearLayout>

</LinearLayout>
