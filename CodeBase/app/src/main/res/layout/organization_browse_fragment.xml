<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <SearchView
        android:id="@+id/org_searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="Search events"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/org_filter_btn"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/org_filter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        app:layout_constraintTop_toTopOf="@id/org_searchView"
        app:layout_constraintBottom_toBottomOf="@id/org_searchView"
        app:layout_constraintStart_toEndOf="@id/org_searchView"
        app:layout_constraintEnd_toStartOf="@id/org_qr_btn"
        android:layout_marginEnd="4dp"/>

    <Button
        android:id="@+id/org_qr_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR"
        app:layout_constraintTop_toTopOf="@id/org_filter_btn"
        app:layout_constraintBottom_toBottomOf="@id/org_filter_btn"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/org_browse_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/org_searchView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
