<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_admin_image_card"
        android:padding="20dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Notification"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/ibmplexserif_semibold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Event ID Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event ID *"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/opensans"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/edit_event_id"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_dark"
            android:hint="Enter Event ID"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:textSize="16sp"
            android:fontFamily="@font/opensans"
            android:layout_marginBottom="14dp" />

        <!-- Notification Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Title *"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/opensans"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/edit_notification_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_dark"
            android:hint="e.g., Event Update, Important Notice"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:textSize="16sp"
            android:fontFamily="@font/opensans"
            android:layout_marginBottom="14dp" />

        <!-- Notification Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message Content *"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/opensans"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/edit_notification_message"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_edittext_dark"
            android:hint="Type your notification message here..."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:textSize="16sp"
            android:fontFamily="@font/opensans"
            android:layout_marginBottom="18dp" />

        <!-- Send To -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send To *"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/opensans"
            android:layout_marginBottom="6dp" />

        <RadioGroup
            android:id="@+id/radio_recipient_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="22dp">

            <RadioButton
                android:id="@+id/radio_waiting_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Waiting List Entrants"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/opensans"
                android:layout_marginBottom="6dp" />

            <RadioButton
                android:id="@+id/radio_selected_entrants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Selected Entrants"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/opensans"
                android:layout_marginBottom="6dp" />

            <RadioButton
                android:id="@+id/radio_cancelled_entrants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Cancelled Entrants"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/opensans" />
        </RadioGroup>

        <!-- Send Button -->
        <Button
            android:id="@+id/button_send_notification"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Send Notification"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_primary"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/opensans" />
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:text="Back"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_primary"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/opensans" />

    </LinearLayout>
</ScrollView>
