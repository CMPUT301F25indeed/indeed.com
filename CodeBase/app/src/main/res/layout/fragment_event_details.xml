<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Back button (fixed header) -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/opensans"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/bg_button_primary"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Page title on same line (centered) -->

    <!-- Subtitle under title -->

    <!-- Top divider under subtitle -->

    <TextView
        android:id="@+id/page_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ibmplexserif_semibold"
        android:gravity="center"
        android:text="Event Details"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_button"
        android:layout_marginTop="32dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/page_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/opensans"
        android:gravity="center"
        android:text="See full information about this event."
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button" />

    <View
        android:id="@+id/top_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/page_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SCROLL AREA (only content below header) -->
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_divider"
        app:layout_constraintBottom_toTopOf="@id/bottom_button_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Event poster -->
            <ImageView
                android:id="@+id/event_poster"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:background="#222222"
                android:contentDescription="Event poster"
                android:scaleType="centerCrop" />

            <!-- Event name -->
            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Event Name"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/ibmplexserif_semibold" />

            <!-- Event description -->
            <TextView
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/opensans" />

            <!-- LOCATION -->
            <TextView
                android:id="@+id/event_location_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Location"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/opensans" />

            <TextView
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/opensans" />

            <!-- CATEGORY -->
            <TextView
                android:id="@+id/event_category_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Category"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/opensans" />

            <TextView
                android:id="@+id/event_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/opensans" />

            <!-- EVENT DATES -->
            <TextView
                android:id="@+id/event_dates_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Event Time"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/opensans" />

            <TextView
                android:id="@+id/event_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/opensans" />

            <!-- REGISTRATION -->
            <TextView
                android:id="@+id/event_registration_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Registration Window"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/opensans" />

            <TextView
                android:id="@+id/event_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/opensans" />

            <!-- STATUS -->
            <TextView
                android:id="@+id/event_status_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Status"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/opensans" />

            <TextView
                android:id="@+id/event_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/opensans" />

            <!-- TOTAL ENTRANTS -->
            <TextView
                android:id="@+id/event_total_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Total People on Waitlist"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/opensans" />

            <TextView
                android:id="@+id/event_total_entrant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/opensans"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- WAITLIST STATUS TEXT -->
    <TextView
        android:id="@+id/waitlist_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✅ You are on the waiting list!"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/bottom_button_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTTOM BUTTON BAR -->
    <LinearLayout
        android:id="@+id/bottom_button_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/yes_button"
            android:layout_width="190dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_primary"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/no_button"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_secondary"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="#2D5EFF" />

        <View
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/try_again_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_primary"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
