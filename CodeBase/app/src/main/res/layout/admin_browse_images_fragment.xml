<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- grey header bar -->
    <TextView
        android:id="@+id/admin_images_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="#DDDDDD"
        android:text="IMAGES"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <SearchView
        android:id="@+id/admin_images_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search images by uploader/event"/>

    <ListView
        android:id="@+id/admin_images_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>


    <Button
        android:id="@+id/admin_images_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Selected"/>

    <Button
        android:id="@+id/admin_images_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="8dp"/>
</LinearLayout>
