<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Title -->

    <!-- Subtitle / quote -->
    <TextView
        android:id="@+id/browse_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/ibmplexserif_semibold"
        android:gravity="center"
        android:text="Browse Events"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/browse_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Find the right event for you."
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:fontFamily="@font/opensans"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/browse_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider under subtitle -->
    <View
        android:id="@+id/browse_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/browse_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search bar -->

    <!-- Filter button (secondary) -->

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:iconifiedByDefault="false"
        android:queryHint="Browse for events"
        app:layout_constraintEnd_toStartOf="@+id/entrant_filter_button_browse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/browse_divider" />

    <Button
        android:id="@+id/entrant_filter_button_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:minWidth="0dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:fontFamily="@font/opensans"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_secondary"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="@id/searchView"
        app:layout_constraintBottom_toBottomOf="@id/searchView"
        app:layout_constraintStart_toEndOf="@id/searchView"
        app:layout_constraintEnd_toStartOf="@id/entrant_qr_button_browse" />

    <!-- QR button (secondary) -->
    <Button
        android:id="@+id/entrant_qr_button_browse"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_button_secondary"
        android:backgroundTint="@null"
        android:fontFamily="@font/opensans"
        android:minWidth="0dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="QR"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/entrant_filter_button_browse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/entrant_filter_button_browse"
        app:layout_constraintTop_toTopOf="@id/entrant_filter_button_browse" />

    <!-- Events list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/entrant_events_browse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintBottom_toTopOf="@id/entrant_home_button_browse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Home button (primary) -->
    <Button
        android:id="@+id/entrant_home_button_browse"
        android:layout_width="303dp"
        android:layout_height="41dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_primary"
        android:backgroundTint="@null"
        android:fontFamily="@font/opensans"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
