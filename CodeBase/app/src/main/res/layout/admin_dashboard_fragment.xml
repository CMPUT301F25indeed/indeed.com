<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/admin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/admin_browse_events"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Browse Events"/>

    <Button
        android:id="@+id/admin_browse_profiles"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Browse Profiles"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/admin_browse_images"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Browse Images"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/admin_view_logs"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="View Logs"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/admin_logout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="16dp"/>
</LinearLayout>
