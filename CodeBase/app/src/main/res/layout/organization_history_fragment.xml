<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#000000">

    <!-- PAGE TITLE -->

    <!-- QUOTE / SUBTEXT -->
    <TextView
        android:id="@+id/org_history_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="History / Notifications"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/org_history_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your received event updates and system alerts."
        android:textColor="#BBBBBB"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/org_history_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DIVIDER -->
    <View
        android:id="@+id/org_history_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/org_history_quote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LIST OF NOTIFICATIONS -->
    <ListView
        android:id="@+id/org_history_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/org_history_divider"
        app:layout_constraintBottom_toTopOf="@id/org_history_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- HOME BUTTON -->
    <Button
        android:id="@+id/org_history_home"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_primary"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
