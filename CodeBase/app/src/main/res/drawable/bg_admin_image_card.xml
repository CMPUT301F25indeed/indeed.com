<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Dark card background -->
    <solid android:color="#111111" />

    <!-- Softer grey border (smaller + neutral) -->
    <stroke
        android:width="1dp"
        android:color="#444444" />

    <!-- Slightly smaller corner radius -->
    <corners android:radius="14dp" />

    <!-- Less padding to make the card feel smaller -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
