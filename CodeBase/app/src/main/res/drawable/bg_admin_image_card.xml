<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Black card background -->
    <solid android:color="#111111" />

    <!-- Blue border -->
    <stroke
        android:width="2dp"
        android:color="#0A66C2" />

    <!-- Rounded corners -->
    <corners android:radius="18dp" />

    <!-- Padding inside card -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
